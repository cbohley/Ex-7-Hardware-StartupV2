<MainScreen>:
    name: 'main'

    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: motor
        text: 'Run Motor'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.pressed()

    DPEAButton:
        id: direction
        text: "Change Direction"
        size: 100, 100
        x: root.width * 0.25
        y:root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.direction()

    Slider:
        size_hint: .75, None
        id: slider
        min: 50
        max: 500
        value: 275
        background_width: 100
        step: 1
        x: root.width *.05
        y: root.height * .3

    Label:
        text: "Speed: " + str(int(slider.value))
        font_size: 30
        x: root.width * -.2
        y: root.height *-.2
        color: 1,0,1,1

    ImageButton:
        id: logo_image_button
        source: "../../pidev/kivy/images/DPEALogoTransparent.png"
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        on_press: root.motor_thread()

    Label:
        id: updates
        text: "Gets position of motor when DPEA button pressed"
        font_size: 30
        x: root.width *.05
        y: root.height *.2
        color: 1,0,1,1

    DPEAButton:
        id: flip
        text: 'Flip'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.75
        color: 0, 0, 1, 1
        on_press: root.newFlip()
